<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/namebartextphoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/logo"
            android:gravity="center"
            android:text=" "
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:typeface="serif" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="25dp" >

           <EditText
                android:id="@+id/buttonEnter1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"

                android:hint="คลังข้อสอบ"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />


            <EditText
                android:id="@+id/buttonEnter2"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"

                android:hint="เกรด"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:id="@+id/buttonEnter3"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_3"
                android:text="แนะนำข้อสอบ"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:id="@+id/buttonEnter4"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_4"
                android:text="คะแนนของฉัน"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>