<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/button21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ps__button_blogger"
        android:text="แบบทดสอบ "
        android:textColor="@color/colorwrite"
        android:textSize="18dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/Welcomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="เลือกข้อสอบที่ท่านมั่นใจว่าถูก"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:text="ท่านสามารถส่งข้อสอบก่อนเวลาได้"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button21"
        android:layout_alignRight="@+id/button21"
        android:layout_below="@+id/Welcome"
        android:layout_marginTop="70dp"
        android:background="@drawable/ps__button_flat_digg"
        android:text="เริ่มทำข้อสอบ"
        android:textColor="@color/black" />

</RelativeLayout>